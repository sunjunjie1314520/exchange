@import 'theme.styl'

@keyframes left
    0%
        transform translateX(-500px)
        opacity 0
    100%
        transform translateX(0)
        opacity 1

@keyframes right
    0%
        transform translateX(500px)
        opacity 0
    100%
        transform translateX(0)
        opacity 1

@keyframes top
    0%
        transform translateY(-100px)
        opacity 0
    100%
        transform translateY(0)
        opacity 1
        
@keyframes bottom
    0%
        transform scale(.8) rotate(-135deg)
    100%
        transform scale(1) rotate(0)

// 旋转
@keyframes _x
	0%
		transform rotate(0)
	100%
		transform rotate(720deg)
// 闪色
@keyframes colors
    0%
        color #fff
    25%
        color shan-color
    50%
        color #fff
    50%
        color shan-color
    100%
        color #fff 
// 颜色变化
@keyframes backs
    0%
        opacity 0
    100%
        opacity 1
// 确认投注
@keyframes fadeBottomSlide
    0%
        opacity 0
        transform-origin center bottom
        transform scale(.2) translateY(2000px)
    100%
        opacity 1
        transform scale(1) translateY(0)
// 水
@keyframes wave
    0%
        background-position 0 0
    100%
        background-position -1500px 0

@keyframes rogate_y
    0%
        transform rotateY(0)
    100%
        transform rotateY(360deg)
