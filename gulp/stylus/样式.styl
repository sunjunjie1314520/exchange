@import "fn.styl"
@import "theme.styl"

.header-top
    .title
        text-align center
        line-height 90px
        box-shadow 0 2px 5px rgba(#000, .1)

.sell-page
    height 100%
    padding-top 60px
    h2
        text-align center
        font-size 36px
    ul
        fw 1
        margin-top 60px
        li
            padding 0 4%
            height 104px
            margin-top 20px
            span
                float left
                line-height 104px
            .box
                float left
                margin-left 32px
                p
                    line-height 104px
            .add
                float left
                margin-left 32px
                width 60px
                height 60px
                border-radius 50%
                background #3048ff

    .tips
        fw 1
        padding 0 10%
        margin-top 100px
        .box
            background rgba(#000, .6)
            border-radius 10px
            padding 25px 0
            h4
                text-align center
                font-size 30px
                color #fff
                padding-bottom 20px
            p
                color #fff
                padding 0 40px
                line-height 1.5

.pub-button
    position fixed
    left 0
    bottom 0
    right 0
    padding 0 52px 104px
    button
        height 105px
        border-radius 10px
        background #3048ff
        color #fff
        width 100%

